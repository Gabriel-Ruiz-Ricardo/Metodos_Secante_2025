{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make: build (compilar)",
            "type": "shell",
            "command": "make",
            "args": [
                "compilar"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila el programa usando el target 'compilar' del Makefile."
        }
    ]
}